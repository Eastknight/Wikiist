!!!
%html
  %head
    %title Wikiist
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags 
  %body
    %nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          .navbar-brand=link_to "Wikiist", root_path
        %ul.nav.navbar-nav
          %li #{link_to "Home", root_path}
          %li #{link_to "Wikis", wikis_path}
          - if current_user
            %li #{link_to "My Wikis", mywikis_path(current_user)}
        .navbar-right#nav-info
          - if current_user
            Hello #{current_user.name || current_user.email}&nbsp;!&nbsp;&nbsp;#{link_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-danger homepage-button'}
          - else
            #{link_to "Sign in", new_user_session_path} or #{link_to "Sign up", new_user_registration_path}
    .container
      - if flash[:notice]
        .alert.alert-success
          %button.close{"data-dismiss" => "alert", :type => "button"} &times;
          = flash[:notice]
      - elsif flash[:error]
        .alert.alert-danger
          %button.close{"data-dismiss" => "alert", :type => "button"} &times;
          = flash[:error]
      - elsif flash[:alert]
        .alert.alert-warning
          %button.close{"data-dismiss" => "alert", :type => "button"} Ã—
          = flash[:alert]
      = yield